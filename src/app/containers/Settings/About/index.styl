@import '../../../styles/gruvbox';
button + button {
    margin-left: 5px;
}

.learnmore {
    color: $blue;
    font-size: 14px;

    > * {
        vertical-align: middle;
    }
}

.label {
    display: inline-block;
    color: $aqua;
    border: 1px solid rgba(0, 0, 0, .1);
    border-radius: 3px;
    border-color: #darker_gray;
    padding: 4px 8px;
}

.aboutContainer {
    margin-top: 0;
    align-items: center;
    display: flex;

    .productLogo {
        width: 96px;
    }

    .productDetails {
        margin-left: 10px;

        .aboutProductName {
            font-size: 18px;
        }
        .aboutProductDescription {
            margin-bottom: 10px;
        }
    }
}

.helpContainer {
    margin-top: 15px;
}

.updateStatusContainer {
    margin-top: 30px;
    position: relative;

    .updateStatusIcon {
        position: absolute;
        left: 0;
        height: 18px;
        width: 18px;

        > * {
            font-size: 18px;
            vertical-align: top;
        }

        &.info {
            color: $blue;
        }
        &.warning {
            color: $yellow;
        }
    }

    .updateStatusMessageContainer {
        display: inline-block;
        position: relative;
        padding-left: 26px;
    }

    .updateStatusMessage {
        color: $fg;
    }
    .releaseLatest {
        color: $fg;
    }

    .updateStatusActionContainer {
        display: inline-block;
        vertical-align: top;
        margin-left: 40px;
    }
}
