@import '../../styles/gruvbox';

.display-panel {
    .coordinate {
        position: relative;
        padding: 5px 0;
        text-align: center;
        width: 1%;

        .axis {
            font-size: 24px;
        }
    }

    .machine-position,
    .work-position {
        position: relative;
        white-space: nowrap;
        padding: 0;
        width: 48%;
        border: 1px solid $darker_gray;
    }

    .action {
        width: 1%;
        padding: 0;
        text-align: center;

        button.action-dropdown {
            min-width: auto;
            border-radius: 0;

            > * {
                color: $darker_gray;
            }

            &:disabled:hover {
                background-color: inherit;
                > * {
                    color: $darker_gray;
                }
            }
            &:hover {
                background-color: $darker_gray;
                > * {
                    color: $fg;
                }
            }
        }
    }
}

.pull-right{
    color: #fff;
}
