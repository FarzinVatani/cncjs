@import '../../styles/gruvbox';

.keypad {
    button.btn-keypad {
        font-size: 16px;
        padding: 0;
        width: 100%;
        line-height: 30px;
        text-align: center;
        vertical-align: middle;
        box-shadow: 1px 1px 2px rgba($bg, .1);
        background: #282828;
        color: #ebdbb2;
        border: 1px solid #928374;
    }

        &:active,
        &.active {
            box-shadow: 0 0 2px rgba($bg, .1);
            transform: translate(1px, 1px);
        }

        :global {
            i.fa,
            span.fa {
                color: $fg;
            }
        }

        &.highlight {
            background-color: rgba($bg, .8);
            background-image: none;
            box-shadow: 1px 1px 2px rgba($bg .2);
            border-color: rgba($bg, .4);

            &:hover,
            &.hover {
                background-color: rgba($bg, .1);
            }

            &:active,
            &.active {
                box-shadow: 0 0 2px rgba($bg, .2);
                transform: translate(1px, 1px);
            }
        }
}