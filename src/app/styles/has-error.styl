@import "gruvbox";

.has-error {
    color: $red;

    .form-control {
        border-color: $red;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075);
    }
    .form-control:focus {
        border-color: $br_red;
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, .075), 0 0 6px $br_red;
    }
}
